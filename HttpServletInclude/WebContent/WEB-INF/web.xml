<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <display-name>HttpServletInclude</display-name>
  <welcome-file-list>
    <welcome-file>product.html</welcome-file>    
  </welcome-file-list>
  <servlet-mapping>
  	<servlet-name>FirstServlet</servlet-name>
  	<url-pattern>/product</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>FirstServlet</servlet-name>
  	<servlet-class>org.servlet.Include.FirstServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SecondServlet</servlet-name>
  	<url-pattern>/ss</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>SecondServlet</servlet-name>
  	<servlet-class>org.servlet.Include.SecondServlet</servlet-class>
  </servlet>
</web-app>